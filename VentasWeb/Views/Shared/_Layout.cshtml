        $.MisUrls.urls({ _ObtenerVentas: '@Url.Action("Obtener", "Venta")' });

        //CONTROLADOR REPORTE
        $.MisUrls.urls({ _ObtenerReporteProducto :'@Url.Action("ObtenerProducto", "Reporte")' });
        $.MisUrls.urls({ _ObtenerReporteVenta :'@Url.Action("ObtenerVenta", "Reporte")' });


        //CONTROLADOR CLIENTE
        $.MisUrls.urls({ _ObtenerClientes: '@Url.Action("Obtener", "Cliente")' });
